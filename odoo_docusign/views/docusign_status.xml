<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="production_order_new_action" model="ir.actions.server">
            <field name="name">Documents Status</field>
            <field name="model_id" ref="model_res_partner"/>
            <field name="state">code</field>
            <field name="code">records.documents_status()</field>
        </record>

        <record id="run_procurement_new_order_action" model="ir.default">
            <field name="model_id" ref="model_res_partner" />
            <field name="name">Documents Status</field>
            <field name="key2">client_action_multi</field>
            <field name="key">action</field>
            <field name="model">res.partner</field>
            <field name="value" eval="'ir.actions.server,' + str(ref('production_order_new_action'))" />
        </record>



        <record id="production_order_new_action1" model="ir.actions.server">
            <field name="name">Documents Status</field>
            <field name="model_id" ref="model_sale_order"/>
            <field name="state">code</field>
            <field name="code">records.documents_status()</field>
        </record>

        <record id="run_procurement_new_order_action1" model="ir.default">
            <field name="model_id" ref="model_sale_order" />
            <field name="name">Documents Status</field>
            <field name="key2">client_action_multi</field>
            <field name="key">action</field>
            <field name="model">sale.order</field>
            <field name="value" eval="'ir.actions.server,' + str(ref('production_order_new_action1'))" />
        </record>

    </data>
</odoo>
