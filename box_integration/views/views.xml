<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="partner_box_form_view">
            <field name="name">partner.box</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page name="Box" string="Box">
                        <group string="Box Account" name="account">
                            <field name="user_name_google"
                                   domain="['|',('create_uid','=',uid),('create_uid','=',False)]"/>

                        </group>
                        <group string="Upload" name="documents">
                            <field name="file_to_upload" filename="my_file_fname" widget="many2many_binary" />
                            <button name="upload_document" type="object" string="Upload" class="oe_highlight" />
                        </group>
                        <group string="Import Documents">
                            <button name="import_documents" type="object" string="Import Documents"
                                    class="oe_highlight"/>
                        </group>
                        <group>
                            <field name="get_files_ids">
                                <tree create="false">
                                    <field name="name"/>
                                    <field name="url" widget="url"/>
                                    <field name="type"/>
                                    <field name="size"/>
                                </tree>
                            </field>
                        </group>


                    </page>
                </notebook>
            </field>

        </record>

        <record model="ir.actions.act_window" id="box_setting_action">
            <field name="name">Box Settings</field>
            <field name="res_model">box.settings</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">['|',('create_uid','=',uid),('create_uid','=',False)]</field>

        </record>

        <record model="ir.ui.view" id="sp_settings_form_view">

            <field name="name">boxcredentials.form</field>
            <field name="model">box.settings</field>
            <field name="arch" type="xml">
                <form string="Box Credentials">
                    <sheet>
                        <group>
                            <group string="Box Client">
                                <field name="name"/>
                                <field name="client_id"/>
                                <field name="client_secret"/>
                                <field name="redirect_uri"/>
                                <button name="get_code" type="object" string="Get Code" class="oe_highlight"/>
                            </group>
                            <group>

                            </group>
                        </group>
                        <group>
                            <span class="text-primary">
                                use this link if "GET CODE" button does not work
                            </span>
                            <br></br>
                            <field name="auth_url" widget="url"/>
                        </group>
                        <group>
                            <group string="Box Codes">
                                <field name="responce_code"/>
                                <field name="access_token"/>
                                <field name="refresh_token"/>
                                <button name="test_connection" type="object" string="Test Connection" class="oe_highlight"
                                 attrs="{'invisible': [('responce_code','=',False)]}"/>

                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record model="ir.ui.view" id="box_settings_tree_view">

            <field name="name">boxcredentials.tree</field>
            <field name="model">box.settings</field>
            <field name="arch" type="xml">
                <tree string="SharePoint Users">
                    <field name="name"/>
                    <field name="client_id"/>
                    <field name="redirect_uri"/>
                    <field name="responce_code"/>
                </tree>
            </field>
        </record>
        <menuitem id="main_box_connector_menu" name="Box Connector"/>

        <menuitem id="google_box_menu" name="Box Connector"
                  parent="main_box_connector_menu" action="box_setting_action"/>


        <record model="ir.ui.view" id="box_file_url_form">

            <field name="name">box.form</field>
            <field name="model">box.connector.id</field>
            <field name="arch" type="xml">
                <form string="Box">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="url" widget="url"/>
                            <field name="type"/>
                            <field name="size"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>