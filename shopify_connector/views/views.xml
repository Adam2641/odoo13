<odoo>

    <data noupdate="1">
        <record id="my_record_01" model="shopify.connector">
            <field name="field_name">Shopify</field>
        </record>
    </data>
    <data noupdate="1">
        <record id="object0" model="shopify.autoconnector">
            <field name="field_name">Shopify Auto</field>
        </record>
    </data>
    <data noupdate="1">
        <record id="settingobject0" model="shopify.settings">
            <field name="field_name">Shopify Settings</field>
        </record>
    </data>

    <data>
        <record model="ir.ui.view" id="shopify_product_custom_view">
            <field name="name">shopify.product</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view" />
            <field name="arch" type="xml">
                <field name="type" position="before">
                    <field name="sync_to_shopify" />
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="shopify_form_view">
            <field name="name">shopify.form</field>
            <field name="model">shopify.connector</field>
            <field name="arch" type="xml">
                <form string="Shopify Settings" create="false" edit="false">
                    <sheet>
                        <group>
                            <group>
                                <h1>ODOO-Shopify CONNECTOR</h1>
                            </group>
                            <group>
                                <group>

                                </group>
                                <group>

                                </group>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="last_sync_date" />
                                <br></br>
                                <br></br>
                                <field name="customers" />
                                <field name="sales_orders" />
                                <field name="products" />
                            </group>

                            <group>

                            </group>

                            <group>

                                <button name="sync_data" type="object" string="Sync" class="oe_highlight" icon="fa-refresh fa-2x" style="width:20%" />

                            </group>

                        </group>

                        <notebook colspan="3">
                            <page string="Connector History details" autofocus="autofocus">
                                <group>
                                    <field name="history_line" mode="tree,kanban">

<!--                                        <form string="Sales Order Lines" create="false">-->
<!--                                            <group>-->
<!--                                                <group>-->
<!--                                                    <field name="sync_date" />-->
<!--                                                    <field name="no_of_orders_sync" />-->
<!--                                                    <field name="no_of_orders_sync_update" />-->
<!--                                                    <field name="no_of_products_sync" />-->
<!--                                                    <field name="no_of_products_sync_update" />-->
<!--                                                    <field name="no_of_customers_sync" />-->
<!--                                                    <field name="no_of_customers_sync_update" />-->
<!--                                                    <field name="sync_type" widget="url" />-->
<!--                                                </group>-->
<!--                                            </group>-->

<!--                                        </form>-->
                                        

                                        <tree string="Sales Order Lines" create="false" delete="true" limit="15">
                                            <field name="sync_date" width="30%"/>
                                            <field name="no_of_orders_sync" width="10%"/>
                                            <field name="no_of_orders_sync_update" width="10%"/>
                                            <field name="no_of_products_sync" width="10%"/>
                                            <field name="no_of_products_sync_update" width="10%"/>
                                            <field name="no_of_customers_sync" width="10%"/>
                                            <field name="no_of_customers_sync_update" width="10%"/>
                                            <field name="sync_type" width="10%" />
                                        </tree>

                                    </field>

                                </group>
                            </page>

                        </notebook>

                    </sheet>

                </form>
            </field>

        </record>
        <record model="ir.actions.act_window" id="shopify_action">
            <field name="name">shopify window</field>
            <field name="res_model">shopify.connector</field>
            <field name="view_mode">form,tree</field>
            <field name="res_id" ref="shopify_connector.my_record_01" />
            <field name="target">inline</field>
        </record>
        <record model="ir.ui.view" id="shopify_auto_form_view">
            <field name="name">shopify.autoform</field>
            <field name="model">shopify.autoconnector</field>
            <field name="arch" type="xml">
                <form string="Shopify Automated Actions Settings" create="false" edit="false">
                    <sheet>
                        <group>
                            <group>
                                <h1>Automated Actions Settings</h1>

                            </group>
                            <group>

                                <group>

                                </group>
                                <group>

                                </group>
                            </group>

                        </group>

                        <group>

                            <group string="Sale Orders">
                                <field name="sales_orders" />
                                <field name="interval_number_SO" />
                                <field name="interval_unit_SO" />
                            </group>

                            <group string="Customers">
                                <field name="customers" />
                                <field name="interval_number_customer" />
                                <field name="interval_unit_customer" />
                            </group>
                            <group string="Products">
                                <field name="products" />
                                <field name="interval_number_product" />
                                <field name="interval_unit_product" />
                            </group>
                            <group>

                            </group>
                            <group>
                                <button name="sync_data" type="object" string="Save" class="oe_highlight" icon="fa-refresh fa-2x" style="width:20%" />

                            </group>
                            <br></br>
                            <span class="text-success">This may take some time if scheduler is already running</span>

                        </group>

                    </sheet>

                </form>
            </field>

        </record>
        <record model="ir.ui.view" id="shopify_setting_form_view">
            <field name="name">shopify.settings</field>
            <field name="model">shopify.settings</field>
            <field name="arch" type="xml">
                <form string="Shopify Settings" create="false" edit="false">
                    <sheet>
                        <group>
                            <group>
                                <h1>Shopify Settings</h1>

                            </group>
                            <group>

                                <group>

                                </group>
                                <group>

                                </group>
                            </group>

                        </group>

                        <group>

                            <group>
                                <field name="shop_name" string="Shop Domain Name" />
                                <field name="api_key" />
                                <field name="api_password" />
                                <field name="api_secret_key" />
                            </group>
                            <group>
                            </group>
                            <group>
                                <button name="test_connection" type="object" string="Save" class="oe_highlight" icon="fa-refresh fa-2x" style="width:20%" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="shopify_auto_action">
            <field name="name">shopify auto window</field>
            <field name="res_model">shopify.autoconnector</field>
            <field name="view_mode">form,tree</field>
            <field name="res_id" ref="shopify_connector.object0" />
            <field name="target">inline</field>
        </record>
        <record model="ir.actions.act_window" id="shopify_settings_action">
            <field name="name">shopify settings window</field>
            <field name="res_model">shopify.settings</field>
            <field name="view_mode">form,tree</field>
            <field name="res_id" ref="shopify_connector.settingobject0" />
            <field name="target">inline</field>
        </record>
        <menuitem id="main_shopify_menu" web_icon="ODOO Shopify,static/description/icon.png" name="SHOPIFY" />

        <menuitem id="shopify_menu" name="Shopify" parent="main_shopify_menu" action="shopify_action" />

        <menuitem id="shopify_auto_menu" name="Shopify Auto Settings" parent="main_shopify_menu" action="shopify_auto_action" />

        <menuitem id="shopify_settings_menu" name="Shopify Settings" parent="main_shopify_menu" action="shopify_settings_action" />

    </data>
</odoo>