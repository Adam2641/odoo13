<odoo>

    <data>
        <record model="ir.ui.view" id="custom_user_form_view">
            <field name="name">user.custom_user</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page string="Hubspot">
                        <group string="Hubspot Settings">
                            <field name="key"/>
                        </group>
                        <group string="Sync Data">
                            <group>
                                <button string="Import Companies" type="object" name="import_companies"
                                        class="oe_highlight"/>
                                <button string="Export Companies" type="object" name="export_companies"
                                        class="oe_highlight"/>
                            </group>
                            <group>
                                <button string="Import Contacts" type="object" name="import_contacts"
                                        class="oe_highlight"/>
                                <button string="Export Contacts" type="object" name="export_contacts"
                                        class="oe_highlight"/>
                            </group>
                        </group>
                    </page>
                </notebook>
            </field>
        </record>
    </data>
</odoo>