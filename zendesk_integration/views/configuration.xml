<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id = 'zendesk_config_view' model='ir.ui.view'>
            <field name ='model'>res.users</field>
            <field name = 'inherit_id' ref = "base.view_users_form"/>
            <field name='arch' type = 'xml'>
                <notebook position = 'inside'>
                    <page string= 'Zendesk Support Connection'>
                        <group>
                            <group string="Zendesk Client">
                                <field name = 'co_url'/>
                                <field name = 'email_id'/>
                                <field name = 'passw' password="True"/>
                                <button name="test_connection" string="Test Connection"  type="object" icon="fa-plug"/>
                                <button name="sync_data" string="Sync Data" type="object" icon="fa-refresh"/>
                            </group>
                        </group>
                    </page>
                </notebook>
            </field>
        </record>
    </data>
</odoo>